-- ModernTinyUI (self-contained, small, mobile-friendly)
local ModernTinyUI = {}
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")
local Players = game:GetService("Players")

local function getParent()
	local pl = Players.LocalPlayer
	if pl and pl:FindFirstChild("PlayerGui") then
		return pl:WaitForChild("PlayerGui")
	end
	return game:FindFirstChildOfClass("CoreGui") or workspace
end

-- helper to create UICorner quickly
local function round(inst, radius)
	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0, radius or 8)
	c.Parent = inst
end

-- Create window, returns folder-like object with element factories
function ModernTinyUI:CreateWindow(title)
	local parent = getParent()
	local ScreenGui = Instance.new("ScreenGui")
	ScreenGui.Name = "ModernTinyUI"
	ScreenGui.ResetOnSpawn = false
	ScreenGui.IgnoreGuiInset = true
	ScreenGui.Parent = parent

	-- Main frame
	local Main = Instance.new("Frame", ScreenGui)
	Main.Size = UDim2.new(0, 300, 0, 44)
	Main
