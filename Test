-- Mini Tora Style UI (with Set & Refresh)
local Library = {}

function Library:CreateWindow(title)
    local gui = Instance.new("ScreenGui", game:GetService("CoreGui"))
    local main = Instance.new("Frame", gui)
    main.Size = UDim2.new(0, 260, 0, 220)
    main.Position = UDim2.new(0.5, -130, 0.5, -110)
    main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    main.BorderSizePixel = 0
    main.Active, main.Draggable = true, true

    local titleBar = Instance.new("TextLabel", main)
    titleBar.Size = UDim2.new(1, 0, 0, 28)
    titleBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    titleBar.Text = title or "Mini UI"
    titleBar.Font = Enum.Font.GothamBold
    titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleBar.TextSize = 16

    local list = Instance.new("Frame", main)
    list.Size = UDim2.new(1, 0, 1, -28)
    list.Position = UDim2.new(0, 0, 0, 28)
    list.BackgroundTransparency = 1

    local layout = Instance.new("UIListLayout", list)
    layout.Padding = UDim.new(0, 4)

    local Folder = {}

    -- Button
    function Folder:AddButton(text, callback)
        local b = Instance.new("TextButton", list)
        b.Size = UDim2.new(1, -10, 0, 28)
        b.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        b.Text = text
        b.Font = Enum.Font.Gotham
        b.TextSize = 14
        b.TextColor3 = Color3.new(1, 1, 1)
        b.MouseButton1Click:Connect(function()
            if callback then callback() end
        end)
    end

    -- Toggle
    function Folder:AddToggle(text, callback)
        local t = Instance.new("TextButton", list)
        t.Size = UDim2.new(1, -10, 0, 28)
        t.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        t.Text = text .. ": OFF"
        t.Font = Enum.Font.Gotham
        t.TextSize = 14
        t.TextColor3 = Color3.new(1, 1, 1)
        local state = false
        t.MouseButton1Click:Connect(function()
            state = not state
            t.Text = text .. ": " .. (state and "ON" or "OFF")
            if callback then callback(state) end
        end)
    end

    -- Dropdown (with Set & Refresh)
    function Folder:AddDropdown(text, options, callback)
        local f = Instance.new("Frame", list)
        f.Size = UDim2.new(1, -10, 0, 50)
        f.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

        local l = Instance.new("TextLabel", f)
        l.Size = UDim2.new(1, 0, 0, 22)
        l.BackgroundTransparency = 1
        l.Text = text
        l.Font = Enum.Font.Gotham
        l.TextSize = 14
        l.TextColor3 = Color3.new(1, 1, 1)

        local btn = Instance.new("TextButton", f)
        btn.Size = UDim2.new(1, -8, 0, 22)
        btn.Position = UDim2.new(0, 4, 0, 24)
        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        btn.Text = "Select..."
        btn.Font = Enum.Font.Gotham
        btn.TextSize = 13
        btn.TextColor3 = Color3.new(1, 1, 1)

        local current = options or {}

        local function Set(new)
            current = new
            print("Dropdown Set ->", table.concat(current, ", "))
        end

        local function Refresh()
            print("Dropdown Refreshed")
        end

        btn.MouseButton1Click:Connect(function()
            if callback and #current > 0 then
                local pick = current[math.random(1, #current)]
                btn.Text = pick
                callback(pick)
            end
        end)

        return { Set = Set, Refresh = Refresh }
    end

    return Folder
end

return Library
